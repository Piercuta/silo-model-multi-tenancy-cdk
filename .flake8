[flake8]
max-line-length = 100
# Black compatibility: ignore formatting rules handled by black
# D: Ignore all docstring warnings (too strict for CDK projects)
extend-ignore = E203,E501,W503,D
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    .eggs,
    *.egg,
    build,
    dist,
    cdk.out,
    .pytest_cache
# Ignore unused imports in __init__.py files
per-file-ignores = __init__.py:F401,F403
