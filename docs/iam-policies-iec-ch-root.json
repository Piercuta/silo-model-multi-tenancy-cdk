{
  "TrustPolicy": {
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Principal": {
          "AWS": [
            "arn:aws:iam::888888888888:root",
            "arn:aws:iam::999999999999:root"
          ]
        },
        "Action": "sts:AssumeRole"
      }
    ]
  },
  "PermissionsPolicy": {
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "AllowRoute53ModificationsForRootDomain",
        "Effect": "Allow",
        "Action": [
          "route53:ChangeResourceRecordSets",
          "route53:GetChange",
          "route53:ListResourceRecordSets"
        ],
        "Resource": [
          "arn:aws:route53:::hostedzone/ORG_ROOT_HOSTED_ZONE_ID"
        ]
      },
      {
        "Sid": "AllowGetChangeForAllChanges",
        "Effect": "Allow",
        "Action": [
          "route53:GetChange"
        ],
        "Resource": [
          "arn:aws:route53:::change/*"
        ]
      }
    ]
  }
}
